worldofpets.bond, www.worldofpets.bond {
    root * /app/public

    # Enable automatic HTTPS
    tls {
        on_demand
    }

    # Laravel routing: handle index.php for all requests
    try_files {path} {path}/ /index.php?{query}

    # PHP handler for Railway environment
    @php path_regexp \.php$
    handle @php {
        reverse_proxy localhost:8000
    }

    # Handle static files
    file_server

    # Security headers
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging for production
    log {
        output stdout
        level ERROR
    }
}
